    xmlns:local="using:OfficeSupplyManagementSystem.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:OfficeSupplyManagementSystem.ViewModel"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:AccountViewModel></viewModel:AccountViewModel>
    </Page.DataContext>
    <Grid>
        <Pivot>
            <PivotItem Header="Kontooversigt">
                <StackPanel>
                    <controls:DataGrid x:Name="DataGrid" ItemsSource="{Binding AccountCatalog.AccountList}" AutoGenerateColumns="False" GridLinesVisibility="All" ColumnWidth="*"
                                       SelectedIndex="{Binding TargetIndex, Mode=TwoWay}" SelectedItem="{Binding TargetAccount, Mode=TwoWay}" >
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn Header="Kontonummer" Binding="{Binding AccountNumber}" />
                            <controls:DataGridTextColumn Header="Kontonavn" Binding="{Binding AccountName}" />
                            <controls:DataGridTextColumn Header="CVR" Binding="{Binding AccountCvr}" />
                            <controls:DataGridTextColumn Header="Leveringsadresse" Binding="{Binding AccountDeliveryAddress}" />
                            <controls:DataGridTextColumn Header="Telefonnummer" Binding="{Binding AccountContact}" />
                            <controls:DataGridTextColumn Header="Bankinformationer" Binding="{Binding AccountBankingInfo}" />
                            <controls:DataGridTextColumn Header="Status" Binding="{Binding AccountStatus}" />
                            <controls:DataGridTemplateColumn Width="Auto">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Slet" Command="{Binding DeleteAccountCommand}"></Button>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                        
