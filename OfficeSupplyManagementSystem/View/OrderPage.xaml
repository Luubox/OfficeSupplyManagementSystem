                    -->
                    <!--#endregion-->
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Opret ny order">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBox Text="{Binding NewOrder.OrderNumber, Mode=TwoWay}" PlaceholderText="Nummer" />
                        <TextBox Text="{Binding NewOrder.OrderType, Mode=TwoWay}" PlaceholderText="Type" />
                        <TextBox Text="{Binding NewOrder.OrderTotalPrice, Mode=TwoWay}" PlaceholderText="Total Pris" />
                        <TextBox Text="{Binding NewOrder.OrderDeliveryAddress, Mode=TwoWay}" PlaceholderText="Addresse" />
                        <TextBox Text="{Binding NewOrder.OrderDate, Mode=TwoWay}" PlaceholderText="Dato" />
                        <TextBox Text="{Binding NewOrder.OrderAccount, Mode=TwoWay}" PlaceholderText="Konto" />
                        <Button Content="Opret" Command="{Binding CreateOrderCommand}"/>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="Ændre order">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                        <TextBox Text="{Binding TargetOrder.OrderNumber, Mode=TwoWay}" PlaceholderText="Order Nummer"  />
                        <TextBox Text="{Binding TargetOrder.OrderType, Mode=TwoWay}" PlaceholderText="Type" />
                        <TextBox Text="{Binding TargetOrder.OrderTotalPrice, Mode=TwoWay}" PlaceholderText="Total Pris" />
                        <TextBox Text="{Binding TargetOrder.OrderDeliveryAddress, Mode=TwoWay}" PlaceholderText="Addresse" />
                        <TextBox Text="{Binding TargetOrder.OrderDate, Mode=TwoWay}" PlaceholderText="Dato" />
                        <TextBox Text="{Binding TargetOrder.OrderAccount, Mode=TwoWay}" PlaceholderText="Konto" />
                    <Button Content="Ret" Command="{Binding EditOrderCommand}"/>
                </StackPanel>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
