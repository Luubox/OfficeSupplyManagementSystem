                        <controls:DataGrid.Columns>
                            <!--TODO: Fix headerstyles - Den skal ikke være grå og lille, så kan man ikke se den!-->
                            <controls:DataGridTextColumn Header="Varenummer" Binding="{Binding ItemNumber}" />
                            <controls:DataGridTextColumn Header="Kategori" Binding="{Binding ItemCategory}" />
                            <controls:DataGridTextColumn Header="Navn" Binding="{Binding ItemName}" />
                            <controls:DataGridTextColumn Header="Info" Binding="{Binding ItemInfo}" />
                            <controls:DataGridTextColumn Header="Pris" Binding="{Binding ItemPrice}" />
                            <controls:DataGridTextColumn Header="Antal" Binding="{Binding ItemAmount}" />
                            <controls:DataGridTemplateColumn Width="Auto">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Slet" Command="{Binding DeleteItemCommand}"/>
                                        <!--TODO: Fix deletecommand-->
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
