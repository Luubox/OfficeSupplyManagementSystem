    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:interop="using:Windows.UI.Xaml.Interop"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:ItemViewModel/>
    </Page.DataContext>

